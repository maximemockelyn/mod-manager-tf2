    "semver": "^7.6.3",
    "toml": "^3.0.0",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.modmanager.tf2",
    "publish": [
      {
        "provider": "github",
        "owner": "maximemockelyn",
        "repo": "mod-manager-tf2",
        "private": false
      }
    ],
    "productName": "Mod Manager TF2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "renderer.js",
      "preload.js",
      "package.json",
      "app/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
